<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <EditText
         android:id="@+id/editText_pnone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/button_tellmylocation"
         android:layout_alignParentLeft="true"
         android:ems="10"
         android:hint="请输入对方ID" >

         <requestFocus />
     </EditText>

    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:editable="false"
        android:id="@+id/editText"
        android:hint="此处显示位置信息"/>

     <Button
         android:id="@+id/button_tuichu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:text="退出"
         android:textColor="#000000"
         android:textSize="30dp" />

     <Button
         android:id="@+id/button_tellmylocation"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/button_tuichu"
         android:layout_centerHorizontal="true"
         android:background="#FFB6C1"
         android:text="告知对方"
         android:textColor="#000000"
         android:textSize="30dp" />

</RelativeLayout>
